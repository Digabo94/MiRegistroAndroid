<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro_uno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/registro"
                android:textSize="30sp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/correoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRegistro"
                android:hint="@string/correo"
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/correoElectronico"
                android:hint="@string/usuario"
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreUsuario"
                android:hint="@string/pass"
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="10dp"
                android:inputType="textPassword"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flecha_siguiente"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_below="@+id/password"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>